{
  "name": "perfumes-store-clean",
  "version": "1.0.0",
  "private": true,
  "description": "E-commerce perfume store with Next.js frontend and Express backend",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:server": "cd server && npm start",
    "start:client": "cd client && npm start",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "test:watch": "concurrently \"npm run test:watch:server\" \"npm run test:watch:client\"",
    "test:watch:server": "cd server && npm run test:watch",
    "test:watch:client": "cd client && npm run test:watch",
    "test:coverage": "npm run test:coverage:server && npm run test:coverage:client",
    "test:coverage:server": "cd server && npm run test:coverage",
    "test:coverage:client": "cd client && npm run test:coverage",
    "lint": "npm run lint:server && npm run lint:client",
    "lint:server": "cd server && npm run lint",
    "lint:client": "cd client && npm run lint",
    "lint:fix": "npm run lint:fix:server && npm run lint:fix:client",
    "lint:fix:server": "cd server && npm run lint:fix",
    "lint:fix:client": "cd client && npm run lint:fix || npm run lint -- --fix",
    "typecheck": "npm run typecheck:server && npm run typecheck:client",
    "typecheck:server": "cd server && npm run build",
    "typecheck:client": "cd client && npx tsc --noEmit",
    "db:migrate": "cd server && npm run db:migrate",
    "db:push": "cd server && npm run db:push",
    "db:seed": "cd server && npm run db:seed",
    "db:studio": "cd server && npm run db:studio",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:down": "docker-compose down",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "stripe:webhook": "bash scripts/stripe-webhook.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
