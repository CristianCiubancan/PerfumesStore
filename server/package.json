{
  "name": "server",
  "version": "1.0.0",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:tracing": "OTEL_ENABLED=true ts-node-dev --respawn --transpile-only -r ./src/tracing-init.ts src/index.ts",
